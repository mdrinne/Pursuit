<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessagesActivity">

    <TextView
        android:id="@+id/messageActivityTitle"
        android:layout_width="148dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:text="@string/message_activity_title"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/newMessage"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:contentDescription="@string/new_conversation_button"
        android:onClick="showCreateConversation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

    <EditText
        android:id="@+id/newConversationUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/strUsername"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/strUsername"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newMessage" />

    <Button
        android:id="@+id/createConversationButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:onClick="createConversation"
        android:text="@string/create_string"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newConversationUsername" />

    <ListView
        android:id="@+id/conversations_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createConversationButton" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/bottom_navigation_menu" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
