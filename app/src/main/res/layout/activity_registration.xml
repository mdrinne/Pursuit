<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".RegistrationActivity">

    <RadioGroup
        android:id="@+id/studentOrCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIamA">

        <RadioButton
            android:id="@+id/radioBtnStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strStudent"
            android:buttonTint="@color/accent1"
            android:textColor="@color/accent1" tools:targetApi="lollipop" />

        <RadioButton
            android:id="@+id/radioBtnCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strCompany"
            android:buttonTint="@color/accent1"
            android:textColor="@color/accent1" tools:targetApi="lollipop" />

        <RadioButton
            android:id="@+id/radioBtnEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strEmployee"
            android:buttonTint="@color/accent1"
            android:textColor="@color/accent1" tools:targetApi="lollipop" />
    </RadioGroup>

    <TextView
        android:id="@+id/textIamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/strIamA"
        android:textColor="@color/accent1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/accent1"
        android:onClick="continueToRegistration"
        android:text="@string/strContinue"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentOrCompany" />
</androidx.constraintlayout.widget.ConstraintLayout>